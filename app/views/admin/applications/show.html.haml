- body_class "users_view"
= render 'admin/navi_bar'

%div.container-fluid
  
  %h1 Application Contents

  %table.table.table-hover
    %thead
      %tr
        %th Form
        %th Status
        %th Created At
        %th Actions
    %tbody
      - if !@app_forms.nil?
        - @app_forms.each do |form|
          %tr
            %td= form.form_name
            %td Here goes Form status
            %td= form.created_at
            %td 
              %ul
                %li= link_to "Show", form_admin_user_application_path(:user_id => @user.id, :id => @application.id, :form_type => form.form_name), :class => "btn btn-default admin_button"
                %li= link_to "Edit", "", :class => "btn btn-default admin_button"

  = button_to "Back", admin_user_path(@user), {:class => "btn btn-default", method: :get}