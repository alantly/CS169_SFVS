- body_class "users_view"
= render 'admin/navi_bar'

%div.container-fluid

  %h1 User Content

  %p= "Contents of user: #{@user.email}"

  %table.table.table-hover
    %thead
      %tr
        %th Application
        %th Year
        %th Status
        %th Created At
        %th Actions
    %tbody
      - if @applications.any?
        - @applications.each do |application|
          %tr
            %td Application
            %td= application.year
            %td= application.completed == true ? "Complete" : "Incomplete"
            %td= application.created_at
            %td 
              %ul
                %li= link_to "Show", admin_user_application_path(:user_id => @user.id, :id => application.id), :class => "btn btn-default admin_button"
                %li= link_to "Edit", "", :class => "btn btn-default admin_button"

  = button_to "Edit", edit_admin_user_path(@user), {:class => "btn btn-default", method: :get}
  = button_to "Back", admin_users_path, {:class => "btn btn-default", method: :get}