- body_class "admin_view"

= render 'admin/navi_bar'

%div.users_index_title.effect1
  %div.container-fluid
    %h1 Create New User

%div.users_content.effect1
  %div.container-fluid
    = form_tag admin_users_path do
      %ul
        %li
          %label
            Email:
            = email_field :user, 'email', size: 50, :required => true

        %li
          %label
            Password:
            = password_field :user, 'password', size: 50, :required => true

        %li
          %label
            User Type:
          %label
            = radio_button :user, 'admin', true, :required => true
            Administrator
          %label
            = radio_button :user, 'admin', false, :required => true
            Regular

        %li
          = submit_tag "Create User", :id => "aprove_btn"

    = link_to "Back", admin_users_path, :id => "back_btn"